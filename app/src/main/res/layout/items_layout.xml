<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ooo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="20dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/card_elevation">
        <ImageView
            android:id="@+id/itemimagees"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/placeholder"/>
        <RelativeLayout
            android:id="@+id/dropDown"
            android:background="@color/colorTransp"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="30dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/header"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="name"/>
                <TextView
                    android:id="@+id/header_size"
                    android:layout_marginStart="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="size"/>
                <TextView
                    android:id="@+id/header_color"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="color"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <ImageView
                android:id="@+id/arrowDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/arrowUp"
                android:layout_marginEnd="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_arrow_drop_up"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/colorTranspp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/fulldetails"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="Name:"/>
                        <TextView
                            android:id="@+id/itemname"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toEndOf="@+id/name"
                            android:layout_marginStart="2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="xxx"/>

                        <TextView
                            android:id="@+id/size"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/name"
                            android:text="Size:"/>

                        <TextView
                            android:id="@+id/itemsize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="11dp"
                            android:text="xxx"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toEndOf="@id/size"
                            app:layout_constraintTop_toBottomOf="@id/itemname" />

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:text="Quantity:"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintEnd_toStartOf="@id/itemquantity"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/itemquantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="xxxx"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/more_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:text="More.."
                            android:textColor="@color/colorBlack"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/quantity" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/soldproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/bb"
                        android:textSize="10sp"
                        android:text="Sold" />
                    <ImageView
                        android:id="@+id/addToShoppingList"
                        android:layout_width="35dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ic_shopping_cart"/>
                    <Button
                        android:id="@+id/editProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/bb"
                        android:textSize="10sp"
                        android:text="Edit" />
                    <ImageView
                        android:id="@+id/restock"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_add_circle"/>
                    <ImageView
                        android:id="@+id/deleteProduct"
                        android:layout_marginStart="5dp"
                        android:tint="@color/colorRed"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_delete_forever"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_marginStart="30dp"
                        android:id="@+id/given"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:background="@drawable/buttoncolor"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:text="Given" />
                    <Button
                        android:id="@+id/obscolete"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:background="@drawable/buttoncolor"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:text="Obscolete" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>