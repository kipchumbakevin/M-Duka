<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    app:cardUseCompatPadding="true"

    app:contentPadding="@dimen/activity_half_margin"

    app:cardBackgroundColor="@android:color/white"

    app:cardCornerRadius="@dimen/card_radius"

    app:cardElevation="@dimen/card_elevation">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/dropDown"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="name"/>
            <TextView
                android:id="@+id/header_size"
                android:layout_marginStart="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:text="size"/>
            <TextView
                android:id="@+id/header_color"
                android:layout_width="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:text="color"/>
            <ImageView
                android:id="@+id/alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:tint="@color/colorRed"
                android:src="@drawable/ic_priority"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:id="@+id/arrowDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_drop_down"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/arrowUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_arrow_drop_up"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fulldetails"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<androidx.cardview.widget.CardView

            android:layout_width="200dp"
            android:layout_height="200dp"
    android:layout_gravity="center"

            app:cardCornerRadius="6dp"

            app:cardElevation="@dimen/card_elevation">
            <ImageView
                android:id="@+id/itemimage"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/nike"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/relativeSale"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <EditText
                android:drawableStart="@drawable/ic_create"
                android:drawablePadding="5dp"
                android:id="@+id/quantity_sold"
                android:padding="5dp"
                android:layout_marginStart="25dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="quantity sold"/>
            <EditText
                android:id="@+id/cost_unit_price"
                android:drawableStart="@drawable/ic_attach_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="14sp"
                android:hint="ksh/item"/>
            <TextView
                android:id="@+id/textbp"
                android:layout_below="@id/quantity_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="45dp"
                android:text="Buying price:"/>
            <Spinner
                android:id="@+id/bpspinner"
                android:layout_below="@id/cost_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45dp"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/cancel_sale"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="55dp"
                android:layout_below="@id/textbp"
                android:layout_marginTop="2dp"
                android:tint="@color/colorRed"
                app:srcCompat="@drawable/ic_close" />
            <ImageView
                android:id="@+id/sold_done"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="1dp"
                android:layout_below="@id/bpspinner"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="42dp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_done" />

        </RelativeLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Name:"/>
                <TextView
                    android:id="@+id/itemname"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorOrange"
                    app:layout_constraintStart_toEndOf="@+id/name"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="xxx"/>

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    android:text="Size:"/>

                <TextView
                    android:id="@+id/itemsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="11dp"
                    android:text="xxx"
                    android:textColor="@color/colorOrange"
                    app:layout_constraintStart_toEndOf="@id/size"
                    app:layout_constraintTop_toBottomOf="@id/itemname" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:text="Quantity:"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintEnd_toStartOf="@id/itemquantity"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemquantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="xxxx"
                    android:textColor="@color/colorOrange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/more_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:text="More.."
                    android:textColor="@color/colorBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/quantity" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/soldproduct"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorGreen"
                android:textSize="10sp"
                android:text="Sold" />
            <Button
                android:id="@+id/editProduct"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="10sp"
                android:text="Edit" />
            <ImageView
                android:id="@+id/restock"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_add_circle"/>
            <ImageView
                android:id="@+id/deleteProduct"
                android:layout_marginStart="5dp"
                android:tint="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/ic_delete_forever"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>