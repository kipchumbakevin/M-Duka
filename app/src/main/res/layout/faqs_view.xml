<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardUseCompatPadding="true"

    app:contentPadding="@dimen/activity_half_margin"

    app:cardBackgroundColor="@color/colorTrans"

    app:cardCornerRadius="@dimen/card_radius"

    app:cardElevation="@dimen/card_elevation"

    android:layout_marginStart="@dimen/activity_half_margin"

    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:id="@+id/faq_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:text="Question"/>
        <TextView
            android:visibility="gone"
            android:textSize="12sp"
            android:id="@+id/faq_answer"
            android:layout_width="wrap_content"
            android:layout_below="@id/faq_question"
            android:textColor="@color/colorGreen"
            android:layout_height="wrap_content"
            android:text="Answer"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>