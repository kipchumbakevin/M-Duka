<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="16dp">
    <TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPop"
    android:gravity="center"
    android:text="More details"
    android:textColor="@color/colorBlack"
    app:layout_constraintStart_toStartOf="@id/guideline"
    app:layout_constraintTop_toBottomOf="@id/linear"/>

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="Color:"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/itemcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="xxxx"
        android:textColor="@color/colorOrange"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/color"
        app:layout_constraintTop_toBottomOf="@id/title" />
    <TextView
        android:id="@+id/design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="Design:"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/color" />

    <TextView
        android:id="@+id/itemdesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="5dp"
        android:text="xxxx"
        android:textColor="@color/colorOrange"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/design"
        app:layout_constraintTop_toBottomOf="@id/itemcolor" />
    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:text="Company:"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/itemdesign" />

    <TextView
        android:id="@+id/itemcompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:text="xxxx"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorOrange"
        app:layout_constraintStart_toEndOf="@id/company"
        app:layout_constraintTop_toBottomOf="@id/itemdesign" />

    <!--<ImageView-->

        <!--android:id="@+id/dialog_close"-->

        <!--android:layout_width="30dp"-->

        <!--android:layout_height="30dp"-->

        <!--android:layout_marginStart="30dp"-->

        <!--android:tint="@color/colorRed"-->


        <!--app:layout_constraintStart_toStartOf="@+id/guideline"-->

        <!--app:layout_constraintTop_toBottomOf="@+id/guideline3"-->
        <!--app:srcCompat="@drawable/ic_close" />-->



    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/guideline"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:orientation="vertical" />



    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/guideline2"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_constraintGuide_end="16dp" />




    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/guideline3"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:orientation="horizontal"

        app:layout_constraintGuide_begin="198dp" />



    <androidx.appcompat.widget.LinearLayoutCompat

        android:id="@+id/linear"

        android:background="@color/colorPrimary"

        android:layout_width="match_parent"

        android:layout_height="80dp"

        android:orientation="vertical"

        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="50dp"

            android:src="@mipmap/ic_launcher_round"

            android:layout_gravity="center"

            android:layout_height="50dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>

