<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ooo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="@dimen/card_elevation">
    <ImageView
        android:id="@+id/simage"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/placeholder"/>

        <RelativeLayout
            android:id="@+id/dropDown"
            android:background="@color/colorTransp"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="30dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="name"/>
                <TextView
                    android:id="@+id/sheader_color"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:text="color"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <ImageView
                android:id="@+id/arrowDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_down"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/arrowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_arrow_drop_up"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/colorTranspp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/fulldetails"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="Name:"/>
                        <TextView
                            android:id="@+id/sitemname"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toEndOf="@+id/name"
                            android:layout_marginStart="2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="xxx"/>

                        <TextView
                            android:id="@+id/size"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/name"
                            android:text="Size:"/>

                        <TextView
                            android:id="@+id/sitemsize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="11dp"
                            android:text="xxx"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toEndOf="@id/size"
                            app:layout_constraintTop_toBottomOf="@id/sitemname" />

                        <TextView
                            android:id="@+id/quantitytopurchase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:text="Quantity to purchase:"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/size" />

                        <TextView
                            android:id="@+id/sitemquantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:text="xxxx"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toEndOf="@+id/quantitytopurchase"
                            app:layout_constraintTop_toBottomOf="@+id/sitemsize" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove?"/>

                    <ImageButton
                        android:id="@+id/sclearshopping"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_done"/>
                    <Button
                        android:id="@+id/edit_shopping"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/buttoncolor"
                        android:textSize="10sp"
                        android:text="edit"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>