<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddStock">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTrans">
        <Spinner
            android:id="@+id/select_item"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:text="Category:"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Type:"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginStart="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spnnerType"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <EditText
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGray"
        android:drawableStart="@drawable/ic_create"
        android:inputType="textCapSentences"
        android:drawableTint="@color/colorGray"
        android:drawablePadding="5dp"
        android:textSize="15sp"
        android:hint="Name"/>
        <EditText
            android:id="@+id/item_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:drawableStart="@drawable/ic_create"
            android:drawableTint="@color/colorGray"
            android:inputType="textCapSentences"
            android:drawablePadding="5dp"
            android:textSize="15sp"
            android:hint="Color"/>
        <EditText
            android:id="@+id/item_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:drawableStart="@drawable/ic_create"
            android:drawableTint="@color/colorGray"
            android:inputType="textCapSentences"
            android:drawablePadding="5dp"
            android:textSize="15sp"
            android:hint="Design e.g khaki,shortsleeved,jordans"/>
        <EditText
            android:id="@+id/item_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:drawableStart="@drawable/ic_create"
            android:drawableTint="@color/colorGray"
            android:inputType="textCapSentences"
            android:drawablePadding="5dp"
            android:textSize="15sp"
            android:hint="Company e.g nike,polo,zara"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/item_bp"
                android:layout_width="match_parent"
                android:textColor="@color/colorBlack"
                android:drawableTint="@color/colorGray"
                android:textColorHint="@color/colorGray"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_attach_money"
                android:textSize="15sp"
                android:hint="Buying price"/>
            <EditText
                android:id="@+id/item_sp"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:drawableTint="@color/colorGray"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_attach_money"
                android:textSize="15sp"
                android:hint="Selling price"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginStart="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleSize"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Size"/>
            <View
                android:id="@+id/sizeView"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/colorBlack"/>
            <Spinner
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:outlineSpotShadowColor="@color/colorRed"
                android:id="@+id/spinnerSize"
                android:backgroundTint="@color/colorRed"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>
            <NumberPicker
                android:visibility="gone"
                android:id="@+id/numberPickerSize"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/pickFormat"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick format"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"
                android:text="Quantity"/>
            <View
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:background="@color/colorBlack"/>
            <NumberPicker
                android:id="@+id/numberPickerQuantity"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="Add images(2)"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="@dimen/card_elevation">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="@dimen/card_elevation">
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="200dp"
                android:scaleType="fitXY"
                android:layout_height="200dp"
                android:src="@drawable/placeholder"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="@dimen/card_elevation">
                <ImageView
                    android:id="@+id/productImage2"
                    android:layout_width="200dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"
                    android:layout_height="200dp"
                    android:src="@drawable/placeholder"/>
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>
        </androidx.cardview.widget.CardView>
        <include layout="@layout/content_add_stock"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
    <include layout="@layout/content_progress_bar"/>
</androidx.appcompat.widget.LinearLayoutCompat>