<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:layout_marginBottom="16dp">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:gravity="center"
        android:text="Edit item details"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/linear"/>

    <TextView
        android:id="@+id/ename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="Name:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/title" />


    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_create"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorGray"
        android:inputType="textCapSentences"
        android:textColor="@color/colorOrange"
        android:textColorHint="@color/colorOrange"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/ename"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/ecolor"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="5dp"
        android:text="Color:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/ename" />

    <EditText
        android:id="@+id/edit_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_create"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorGray"
        android:inputType="textCapSentences"
        android:textColor="@color/colorOrange"
        android:textColorHint="@color/colorOrange"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/ecolor"
        app:layout_constraintTop_toBottomOf="@id/edit_name" />

    <TextView
        android:id="@+id/edesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="Design:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/ecolor" />

    <EditText
        android:id="@+id/edit_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="100dp"
        android:drawableStart="@drawable/ic_create"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorGray"
        android:inputType="textCapSentences"
        android:textColor="@color/colorOrange"
        android:textColorHint="@color/colorOrange"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/edesign"
        app:layout_constraintTop_toBottomOf="@id/edit_color" />
    <TextView
        android:id="@+id/ecompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Company:"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/edesign"/>
    <EditText
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edit_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOrange"
        android:textColorHint="@color/colorOrange"
        android:drawableStart="@drawable/ic_create"
        android:drawableTint="@color/colorGray"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/edit_design"
        android:inputType="textCapSentences"
        android:drawablePadding="5dp"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/esize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Size:"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/ecompany"/>

    <EditText
        android:id="@+id/edit_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_create"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorOrange"
        android:textColorHint="@color/colorOrange"
        android:inputType="textCapSentences"
        android:drawablePadding="5dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/esize"
        app:layout_constraintTop_toBottomOf="@id/edit_company" />
    <TextView
        android:id="@+id/equantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="23dp"
        android:text="Quantity:"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/esize"/>

    <EditText
        android:id="@+id/edit_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_create"
        android:drawablePadding="5dp"
        android:inputType="numberDecimal"
        android:textColor="@color/colorOrange"
        android:textColorHint="@color/colorOrange"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/equantity"
        app:layout_constraintTop_toBottomOf="@id/edit_size" />
    <TextView
        android:id="@+id/esp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="23dp"
        android:text="Selling price:"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/equantity"/>
    <EditText
        android:id="@+id/edit_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_create"
        android:drawablePadding="5dp"
        android:inputType="numberDecimal"
        android:textColor="@color/colorOrange"
        android:textColorHint="@color/colorOrange"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/esp"
        app:layout_constraintTop_toBottomOf="@id/edit_quantity" />



    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/guideline"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:orientation="vertical" />



    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/guideline2"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_constraintGuide_end="16dp" />


    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/guideline3"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:orientation="horizontal"

        app:layout_constraintGuide_begin="409dp" />



    <androidx.appcompat.widget.LinearLayoutCompat

        android:id="@+id/linear"

        android:background="@color/colorPrimary"

        android:layout_width="match_parent"

        android:layout_height="80dp"

        android:orientation="vertical"

        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="50dp"

            android:src="@mipmap/ic_launcher_round"

            android:layout_gravity="center"

            android:layout_height="50dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>

